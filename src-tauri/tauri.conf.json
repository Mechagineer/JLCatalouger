{
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "JLCatalouger",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "JLCatalouger",
        "fullscreen": false,
        "width": 1024,
        "height": 700,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.jlcatalog.jlcatalouger",
      "resources": [
        "src-tauri/bin/*"
      ]
    }
  }
}